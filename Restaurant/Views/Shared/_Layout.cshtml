<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant</title>
    <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/fontawesome-free-5.11.2-web/css/all.css" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/moment.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/js/tempusdominus-bootstrap-4.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/css/tempusdominus-bootstrap-4.min.css" />
    <script src="~/lib/Chart.js/Chart.bundle.js"></script>
    <link rel="stylesheet" href="~/lib/Chart.js/Chart.css" />
</head>
<body>

<nav class="navbar navbar-dark navbar-expand-sm sticky-top bg-dark">
    <div class="container">
        <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">SNACKS</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon" style="color: #fff"></span>
        </button>
        <div class="collapse navbar-collapse flex-grow-0" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item px-2">
                    <a class="nav-link text-white small" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                </li>
                <li class="nav-item px-2">
                    <a class="nav-link text-white small" asp-area="" asp-controller="Home" asp-action="Reservation">RESERVATION</a>
                </li>
                <li class="nav-item px-2">
                    <a class="nav-link text-white small" asp-area="" asp-controller="Home" asp-action="#">MENU</a>
                </li>
                <li class="nav-item px-2">
                    <a class="nav-link text-white small" asp-area="" asp-controller="Home" asp-action="#">GALLERY</a>
                </li>
                <li class="nav-item px-2">
                    <a class="nav-link text-white small" asp-area="" asp-controller="Home" asp-action="Contact">CONTACT</a>
                </li>
            </ul>
        </div>

    </div>
</nav>
@RenderBody()

<footer>
    <div class="card-footer w-100 pb-0 mb-0">
        <div class="row">
            <div class="col-9">
                <span>&copy; 2019 - Restaurant - BlueFine</span>
            </div>
            <div class="col-3 text-right">
                <ul class="list-unstyled">
                    <li class="pr-2 d-inline">
                        <a class="small" asp-area="" asp-controller="Admin" asp-action="Index">Login</a>
                    </li>
                    <li class="pr-2 d-inline">
                        <a class="small" asp-area="" asp-controller="" asp-action="#">Privacy</a>
                    </li>
                    <li class="pr-2 d-inline">
                        <a class="small" asp-area="" asp-controller="" asp-action="#">Rules</a>
                    </li>
                    <li class="pr-2 d-inline">
                        <a class="small" asp-area="" asp-controller="" asp-action="#">About</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</footer>

@RenderSection("Scripts", required: false)
</body>
</html>
